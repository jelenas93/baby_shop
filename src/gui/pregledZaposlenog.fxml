                  <TableColumn fx:id="imeZaposlenogTableColumn" minWidth="5.0" prefWidth="279.0" text="Ime" />
                  <TableColumn fx:id="prezimeZaposlenogTableColumn" minWidth="2.0" prefWidth="294.0" text="Prezime" />
                  <TableColumn fx:id="jmbgZaposlenogTableColumn" prefWidth="325.0" text="JMBG" />
              </columns>
            </TableView>
            <GridPane hgap="50.0" vgap="50.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
